{% if accordion_first|default %}
    <div class="accordion" id="accordion_{{ accordion_parentId }}">
{% endif %}

<div class="{{ class }} ce_accordion accordion-item block"{{ cssID }}{{ style|default ? ' style="' ~ style ~ '"' }}>
    <h3 class="accordion-header mb-0" id="heading_{{ id }}">
        <button class="accordion-button{% if not accordion_first|default %} collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_{{ id }}"{% if accordion_first|default %} aria-expanded="true"{% else %}  aria-expanded="false"{% endif %} aria-controls="collapse_{{ id }}">
            {{ headline }}
        </button>
    </h3>
    <div id="collapse_{{ id }}" class="accordion-collapse collapse{% if accordion_first|default %} show{% endif %}" aria-labelledby="heading_{{ id }}"{% if accordion_parentId|default %} data-bs-parent="#accordion_{{ accordion_parentId }}"{% endif %}>
        <div class="accordion-body">
            {% if not addBefore|default %}
                {{ text|raw }}
            {% endif %}

            {% if addImage|default %}
                {% include ('@HeimrichHannotContaoUtils/image.html.twig') with {
                    'margin': margin|default,
                    'href': href|default,
                    'linkTitle': linkTitle|default,
                    'attributes': attributes|default,
                    'picture': picture|default,
                    'caption': caption|default
                } only %}
            {% endif %}

            {% if addBefore|default %}
                {{ text|raw }}
            {% endif %}
        </div>
    </div>
</div>

{% if accordion_last|default %}
    </div>
{% endif %}