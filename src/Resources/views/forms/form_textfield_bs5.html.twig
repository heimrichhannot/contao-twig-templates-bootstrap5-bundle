{% extends '@HeimrichHannotTwigTemplatesBootstrap5/forms/form_row_bs5.html.twig' %}

{% block field %}
    <input type="{{ _entity.type }}" name="{{ strName }}" id="ctrl_{{ strId }}" class="form-control {{ strClass }}" value="{{ varValue|default()|raw }}" {{ attributes|default()|raw }} {{ arrConfiguration.placeholder|default|raw }}>
    {% if explanation|default %}
        <p class="explanation">
            {{ explanation }}
        </p>
    {% endif %}
{% endblock %}
