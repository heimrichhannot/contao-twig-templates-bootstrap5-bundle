{% extends '@HeimrichHannotTwigTemplatesBootstrap5/forms/form_row_bs5.html.twig' %}

{% block field %}
    <select class="{% block selectClasses %}form-select {{ strClass }}{% endblock %}" name="{{ strName }}" id="ctrl_{{ strId }}" {{ attributes|default()|raw }}>
        {% for option in arrOptions %}
            {% set counter = random() %}
            {% set default = option.value == arrConfiguration.default|default() %}
            {% block option %}
                <option value="{{ option.value }}"{% if option.selected|default(false) %} selected{% endif %}>{{ option.label|raw }}</option>
            {% endblock %}
        {% endfor %}
    </select>
{% endblock %}
